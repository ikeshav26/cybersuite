# Environment variables template
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://cybersec:cybersec123@postgres:5432/cybersec_auth
POSTGRES_USER=cybersec
POSTGRES_PASSWORD=cybersec123
POSTGRES_DB=cybersec_auth

# Redis Configuration
REDIS_URL=redis://redis:6379

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# OpenAI API Key
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Key
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Gemini API Key
GEMINI_API_KEY=your-gemini-api-key-here

# GitHub App Configuration
GITHUB_APP_ID=your-github-app-id
GITHUB_PRIVATE_KEY=your-github-private-key
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret

# Next.js Public URLs
NEXT_PUBLIC_API_URL=https://secureauth.mannu.live/api
NEXT_PUBLIC_AUTH_URL=https://secureauth.mannu.live/api/auth

# Domain and SSL
DOMAIN=secureauth.mannu.live
EMAIL=your-email@example.com

# GitHub Configuration (for pulling container images)
GITHUB_REPOSITORY_OWNER=mannuvilasara
GITHUB_USERNAME=your-github-username
GITHUB_TOKEN=your-github-personal-access-token
IMAGE_TAG=latest

# Legacy variables (for compatibility)
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=cybersec_auth
DATABASE_USER=cybersec
DATABASE_PASSWORD=cybersec123

REDIS_HOST=redis
REDIS_PORT=6379

MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false

JWT_REFRESH_EXPIRES_IN=30d

# Application Environment
NODE_ENV=production
FRONTEND_URL=https://secureauth.mannu.live
API_GATEWAY_URL=https://secureauth.mannu.live/api

# Microservice Ports
AUTH_SERVICE_PORT=3001
AI_SERVICE_PORT=3002
SECUREBOT_SERVICE_PORT=3003

# Frontend Application Port
WEB_APP_PORT=3000

# Security
ENCRYPTION_KEY=your-encryption-key-min-32-characters-long
VAULT_MASTER_KEY=your-vault-master-key-change-this

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_AI_AUTO_FIX=true
ENABLE_LOG_MONITORING=true
ENABLE_VAULT=true

